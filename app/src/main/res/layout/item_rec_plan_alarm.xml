<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/item_plan_rec_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Base.CardView"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/card_foreground"
        >

        <LinearLayout
            android:id="@+id/ly_plan_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/img_notify_clock"
                />
            <TextView
                android:id="@+id/txt_plan_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:text="00:00"
                android:textSize="18sp"
                />
            <ImageButton
                android:id="@+id/btn_alarm_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_remove_g"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/colorNone"
                android:layout_marginTop="16dp"
                android:layout_marginStart="140dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>