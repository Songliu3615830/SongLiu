<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/dialog_divider_one"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="选择容量"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_divider_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_select_close"
        />

    <Button
        android:paddingTop="12dp"
        android:paddingRight="20dp"
        android:id="@+id/btn_split_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorNone"
        android:text="关闭"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_divider_one"
        />

    <com.example.sonliu.drinkingalert.util.wheelviewUtil.wheelview.WheelView
        android:id="@+id/wheel_dialog"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>