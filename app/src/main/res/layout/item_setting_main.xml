<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/sly_item_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/img_item_icon"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:src="@drawable/img_avatar_g"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:paddingRight="50dp"
        android:id="@+id/txt_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没填名字"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_icon"
        app:layout_constraintTop_toTopOf="@+id/img_item_icon"
        />

    <ImageView
        android:id="@+id/img_item_add_child"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingRight="7dp"
        android:src="@drawable/img_add_g"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_item_add_child"
        />
    <TextView
        android:id="@+id/txt_item_add_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加孩子"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:paddingRight="15dp"
        android:id="@+id/img_item_right"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/login_icon_enter"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_icon"
        app:layout_constraintTop_toTopOf="@+id/img_item_icon"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>